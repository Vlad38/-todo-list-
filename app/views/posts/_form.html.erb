<%= form_for @post do |f| %>
	<div class="form-group">
		<%= f.label :title, class: 'form-control' %>
		<%= f.text_field :title %>
	</div>

	<div class="form-group">
		<%= f.label :summary, class: 'form-control' %>
		<%= f.text_area :summary %>
	</div>

	<div class="form-group">
		<%= f.label :body, class: 'form-control' %>
		<%= f.text_area :body %>
	</div>

	<div class="form-group">
		<%= f.submit 'Save', class: 'btn btn-info' %>
        <%= link_to '< back', :back, class: 'btn' %>
	</div>
<% end %>